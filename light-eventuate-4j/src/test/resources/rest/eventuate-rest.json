              ]
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                }
              }
            },
            "201": {
              "description": "Null response"
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      },
      "/todos/{id}": {
        "delete": {
          "summary": "Delete a todo by Id",
          "operationId": "deleteTodosById",
          "tags": [
            "todos"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of todo",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "security": [
            {
              "todo_auth": [
                "write:todo"
              ]
            }
          ],
          "responses": {
            "200": {
              "description": "Expected response to a valid request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            },
            "default": {
              "description": "unexpected error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "todo_auth": {
          "type": "oauth2",
          "description": "This API uses OAuth 2 with the client credential grant flow.",
          "flows": {
            "clientCredentials": {
              "tokenUrl": "https://localhost:6882/token",
              "scopes": {
                "write:todo": "modify todo",
                "read:todo": "read todo"
              }
            }
          }
        }
      },
      "schemas": {
        "Todo": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "a UUID generated"
            },
            "title": {
              "type": "string",
              "description": "title of todo"
            },
            "complete": {
              "type": "boolean",
              "default": false
            },
            "order": {
              "type": "integer",
              "format": "int32"
            }
          }
        },
        "Error": {
          "required": [
            "code",
            "message"
          ],
          "properties": {
            "code": {
              "type": "integer",
              "format": "int32"
            },
            "message": {
              "type": "string"
            }
          }
        }
      }
    }
